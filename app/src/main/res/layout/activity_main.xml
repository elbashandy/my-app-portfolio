<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="My Nanodegree Apps!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/spotifyStreamer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:onClick="sendMessage"
        android:text="Spotify Streamer"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="#F08C35"/>

    <Button
        android:id="@+id/scoresApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spotifyStreamer"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"
        android:text="Scores App"
        android:layout_alignRight="@+id/spotifyStreamer"
        android:layout_alignEnd="@+id/spotifyStreamer"
        android:layout_alignLeft="@+id/spotifyStreamer"
        android:layout_alignStart="@+id/spotifyStreamer"
        android:background="#F08C35"/>

    <Button
        android:id="@+id/libraryApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"
        android:text="Library App"
        android:layout_below="@+id/scoresApp"
        android:layout_alignLeft="@+id/scoresApp"
        android:layout_alignStart="@+id/scoresApp"
        android:layout_alignRight="@+id/scoresApp"
        android:layout_alignEnd="@+id/scoresApp"
        android:background="#F08C35"/>

    <Button
        android:id="@+id/buildItBigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"
        android:text="Build It Bigger"
        android:layout_below="@+id/libraryApp"
        android:layout_alignLeft="@+id/libraryApp"
        android:layout_alignStart="@+id/libraryApp"
        android:layout_alignRight="@+id/libraryApp"
        android:layout_alignEnd="@+id/libraryApp"
        android:background="#F08C35" />

    <Button
        android:id="@+id/xyzReader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"
        android:text="XYZ Reader"
        android:layout_below="@+id/buildItBigger"
        android:layout_alignLeft="@+id/buildItBigger"
        android:layout_alignStart="@+id/buildItBigger"
        android:layout_alignRight="@+id/buildItBigger"
        android:layout_alignEnd="@+id/buildItBigger"
        android:background="#F08C35" />

    <Button
        android:id="@+id/capstone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"
        android:text="Capstone: My Own App"
        android:layout_below="@+id/xyzReader"
        android:layout_alignLeft="@+id/xyzReader"
        android:layout_alignStart="@+id/xyzReader"
        android:layout_alignRight="@+id/xyzReader"
        android:layout_alignEnd="@+id/xyzReader"
        android:background="#82B1FF" />

</RelativeLayout>
